@page
@model DnsModel
@{
    ViewData["Title"] = "DNS Health";
}

<h1>DNS Health</h1>

<div class="mb-3">
    <a href="/" class="btn btn-secondary">← Back to Dashboard</a>
</div>

<div class="row">
    <div class="col-md-12 mb-3">
        <div class="card status-card status-@(Model.DnsHealth.Status.ToLower())">
            <div class="card-body">
                <h5 class="card-title">Overall DNS Status</h5>
                <h3 class="status-text">@Model.DnsHealth.Status</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">DNS Resolution Tests</h5>
            </div>
            <div class="card-body">
                @if (Model.DnsHealth.TestResults.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Query</th>
                                <th>Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var test in Model.DnsHealth.TestResults)
                            {
                                <tr>
                                    <td>@test.RecordType</td>
                                    <td><small>@test.Query</small></td>
                                    <td>
                                        @if (test.Successful)
                                        {
                                            <span class="badge bg-success">✓ Success</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">✗ Failed</span>
                                            @if (!string.IsNullOrEmpty(test.ErrorMessage))
                                            {
                                                <br /><small class="text-danger">@test.ErrorMessage</small>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No test results available.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">DNS Forwarders</h5>
            </div>
            <div class="card-body">
                <h6>Forwarders Status:</h6>
                <p>
                    <span class="badge bg-@(Model.DnsHealth.ForwardersHealthy ? "success" : "danger")">
                        @(Model.DnsHealth.ForwardersHealthy ? "Healthy" : "Unhealthy")
                    </span>
                </p>
                <p class="text-muted">
                    Forwarder health is determined based on successful DNS resolution tests.
                </p>
            </div>
        </div>
    </div>
</div>
